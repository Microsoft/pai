<% var typeDisplay = {
    'job': 'job',
    'dockerimage': 'docker',
    'script': 'script',
    'data': 'data',
}[type] || 'job'; %>
<div class="container-fluid" id="job-info">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <section class="content" style="min-height: auto;">
                <div class="row">
                    <div class="col-xs-9"><p class="lead"><a href="marketplace.html">Marketplace</a> / <span class="text-capitalize"><%= typeDisplay %></span></p></div>
                    <div class="col-xs-3">
                        <a href="submit-v2.html" class="btn btn-link">Submit your job</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <form class="input-group input-group-sm" action="marketplace.html">
                            <input type="search" class="form-control" name="query"
                                placeholder="Search job, docker script, and data on Platform for AI">
                            <span class="input-group-btn">
                                <button class="btn btn-info" type="submit" aria-label="Search">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                </button>
                            </span>
                        </form>
                    </div>
                </div>
                <div class="media">
                    <div class="media-left">
                        <img class="media-object" src="/assets/img/marketplace/<%= typeDisplay %>.jpg" alt="<%= name %>" height="100">
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading"><%= name %></h4>
                        <p><strong><%= contributor %></strong></p>
                        <p><%= description %></p>
                        <div class="row">
                            <div class="col-md-2 col-sm-4 col-xs-6">
                                <a href="submit-v2.html?op=clone&type=<%= encodeURIComponent(type) %>&name=<%= encodeURIComponent(name) %>" class="btn btn-info btn-block">Clone</a>
                            </div>
                            <div class="col-md-2 col-sm-4 col-xs-6">
                                <a href="submit-v2.html?op=run&type=<%= encodeURIComponent(type) %>&name=<%= encodeURIComponent(name) %>" class="btn btn-info btn-block">Run</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<div class="container-fluid" id="job-description">
    <div class="row">
        <div class="col-md-7 col-md-offset-1">
            <section class="content">
                <h4><strong><%= typeDisplay === 'job' ? 'Jobs ' : '' %>Description</strong></h4>
                <% if (typeDisplay === 'job') {
                    for(var i = 0, l = prerequisites.length; i < l; i += 1) { var item = prerequisites[i]
                        var subTypeDisplay = {
                            'job': 'job',
                            'dockerimage': 'docker',
                            'script': 'script',
                            'data': 'data',
                        }[item.type] || 'job'; %>
                        <div class="thumbnail" style="display: inline-block; width: 200px;">
                            <img src="/assets/img/marketplace/<%= subTypeDisplay %>.jpg" width="50%">
                            <div class="caption">
                                <h3 class="h5 text-center"><strong><%= item.name %></strong></h3>
                                <p class="text-muted">
                                    <span><%= item.contributor %></span>
                                </p>
                                <p><%= item.description %></p>
                            </div>
                        </div>
                    <% }
                } %>
                <hr>
                <div>
                    <p><%= description %></p>
                </div>
            </section>
        </div>
        <div class="col-md-4">
            <section class="content">
                <h4><strong>Related</strong></h4>
                <ul class="list-unstyled">
                    <% if (typeDisplay === 'job') {
                        for (var i = 0, l = prerequisites.length; i < l; i++) {
                            var uri = prerequisites[i].uri
                            var relatedUri = /^https?:\/\//.test(uri) ? uri : 'http://hub.docker.com/r/' + uri %>
                        <li><a href="<%= relatedUri %>"><%= relatedUri %><a></li>
                        <% }
                    } else { 
                        var relatedUri = /^https?:\/\//.test(uri) ? uri : 'http://hub.docker.com/r/' + uri %>
                        <li><a href="<%= relatedUri %>"><%= relatedUri %><a></li>
                    <% } %>
                </ul>
            </section>
        </div>
    </div>
</div>