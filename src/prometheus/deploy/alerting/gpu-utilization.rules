# Rule Syntax Reference: https://prometheus.io/docs/prometheus/latest/configuration/alerting_rules/

# select alert severity from `info`, `warn`, `error` or `fatal`

groups:
    - name: gpu_utilization
      rules:
      - alert: ClusterGpuUtilization
        # triggered at UTF time 00:00:00 - 00:01 everyday
        expr: avg(avg_over_time(nvidiasmi_utilization_gpu[7d])) and vector(time() % 86400) >= 60*60*0 <=60*60*0+1000000
        labels:
          severity: info
          report_type: cluster-usage

      - alert: UserGpuUtilization
        # triggered at UTF time 00:00:00 - 00:01 everyday
        expr: (sum by (username) (sum_over_time(task_gpu_percent[7d]))) / (sum by (username) (count_over_time(task_gpu_percent[7d])*100)) * 100 and vector(time() % 86400) >= 60*60*0 <=60*60*0+1000000
        labels:
          severity: info
          report_type: cluster-usage

      - alert: JobGpuUtilization
        # triggered at UTF time 00:00:00 - 00:01 everyday
        expr: avg by (job_name) (avg_over_time(task_gpu_percent{username!="noves"}[7d])) and vector(time() % 86400) >= 60*60*0 <=60*60*0+1000000
        labels:
          severity: info
          report_type: cluster-usage
